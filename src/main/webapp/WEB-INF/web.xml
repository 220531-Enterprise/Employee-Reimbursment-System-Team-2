<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://Java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>employee-servlet-app</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>FrontController</servlet-name>
		<servlet-class>com.revature.web.FrontController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>/login</url-pattern>
		<url-pattern>/employees</url-pattern>
		<url-pattern>/register</url-pattern>
		<url-pattern>/request</url-pattern>
		<url-pattern>/find-requests</url-pattern>
		<url-pattern>/get-user</url-pattern>
		<url-pattern>/update-account</url-pattern>
		<url-pattern>/find-requests-mgnr</url-pattern>
		<url-pattern>/find-pending-requests-mgnr</url-pattern>
		<url-pattern>/find-resolved-requests-mgnr</url-pattern>
		<url-pattern>/find-all-emp-mgnr</url-pattern>
		<url-pattern>/update-reimbs-status</url-pattern>
		<url-pattern>/logout</url-pattern>


		<!-- http://localhost:8080/employee-servlet-app/login -->
		<!-- http://localhost:8080/employee-servlet-app/employees -->
	</servlet-mapping>
</web-app>